<% if flash[:notice] %>
  <p class="alert alert-success"><%= notice %></p>
<% elsif flash[:alert] %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>

<div class="container">
  <div class="row">

    <%= render 'users/user', user: @user %>

    <%= render 'books/book', book: @book %>

    <div class="col-md-8">
        <h2>Book detail</h2>
        <table class="table">
            <tbody>
                <tr>
                    <td>
                        <%= image_tag @users.get_profile_image(100,100) %><br>
                        <%= link_to @users.name, user_path(@user.id) %>
                    </td>
                    <td><%= link_to @books.title %></td>
                    <td><%= @books.body %></td>
                    <td>
                        <% if @books.user.id == current_user.id %>
                        <%= link_to "Edit", edit_book_path(@books.id),class:"btn btn-sm btn-success" %>
                        <% end %>
                    </td>
                    <td>
                        <% if @books.user.id == current_user.id %>
                        <%= link_to "Destroy", book_path(@books.id),  class:"btn btn-sm btn-danger", method: :delete,"data-confirm" => "本当に削除しますか？" %>
                        <% end %>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
  </div>
</div>