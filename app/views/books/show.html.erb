<div class="container">
  <div class="row">

    <%= render 'users/user', user: @user %>

    <%= render 'books/book', book: @book %>

    <div class="col-md-8">
        <h2>Book detail</h2>
        <table class="table">
            <tbody>
                <tr>
                    <td>
                        <%= image_tag @user.get_profile_image(100,100) %><br>
                        <%= link_to @user.name %>
                    </td>
                    <td><%= link_to @books.title %></td>
                    <td><%= @books.body %></td>
                </tr>
            </tbody>
        </table>
    </div>
  </div>
</div>