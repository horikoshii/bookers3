<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>User Info</h1>
      <%= form_with model: @user do |f| %>
        <div class="form-group">
          <label for="book_title">Name</label><br>
          <%= f.text_area :name %>
        </div>
        <div class="form-group">
          <label for="book_opinion">ProfileImage</label><br>
          <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
        </div>
        <div class="form-group">
          <label for="book_opinion">Introduction</label><br>
          <%= f.text_area :introduction %>
        </div>
        <div class="form-group">
          <%= f.submit 'Update Book',class:"btn btn-sm btn-success" %>
        </div>
      <% end %>
    </div>
  </div>
</div>