<% if flash[:notice] %>
  <p class="alert alert-success"><%= notice %></p>
<% elsif flash[:alert] %>
  <p class="alert alert-danger"><%= alert %></p>
<% end %>

<div class="container">
  <div class="row">

    <%= render 'users/user', user: @user %>

    <%= render 'books/book', book: @book %>

    <div class="col-md-8">
        <h2>Books</h2>
        <table class="table">
          <thead>
            <tr>
              <td></td>
              <td>Title</td>
              <td>Opinion</td>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
            <tr>
              <td><%= image_tag book.user.get_profile_image(100,100) %></td>
              <td><%= link_to book.title, book_path(book.id) %></td>
              <td><%= book.body %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>